{
  "name": "static-job-listings",
  "author": "alexl8819",
  "license": "GPL-3.0-or-later",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --base=/static-job-listings/ && cp -R src/assets/images/*.svg public/assets",
    "preview": "vite preview",
    "lint": "npx eslint src/**/**.{js,vue} --max-warnings=0",
    "test": "jest --no-cache"
  },
  "dependencies": {
    "vue": "^3.2.45"
  },
  "devDependencies": {
    "@babel/core": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@fontsource/league-spartan": "^5.0.9",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/test-utils": "^2.4.1",
    "@vue/vue3-jest": "^29.2.5",
    "autoprefixer": "^10.4.13",
    "babel-jest": "^29.6.2",
    "eslint": "^8.47.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "eslint-plugin-vue": "^9.17.0",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "jest-transform-stub": "^2.0.0",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.7",
    "vite": "^4.1.0",
    "vite-svg-loader": "^4.0.0",
    "vue-eslint-parser": "^9.3.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testEnvironmentOptions": {
      "customExportConditions": [
        "node",
        "node-addons"
      ]
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "moduleNameMapper": {
      ".+\\.(svg)(\\?component)?$": "<rootDir>/src/__mocks__/MockSVG.vue"
    },
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.vue$": "@vue/vue3-jest",
      ".+\\.(css|styl|less|sass|scss|png|svg|jpg|ttf|woff|woff2)$": "jest-transform-stub"
    }
  }
}
